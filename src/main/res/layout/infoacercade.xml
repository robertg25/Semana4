<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoAcercadeActivity">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circular_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/perro2"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="#3f51b5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/text_desarrollador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_desarrollador"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_below="@id/circular_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Version: 1.0"
        android:textSize="18dp"
        android:layout_below="@id/text_desarrollador"/>
</RelativeLayout>